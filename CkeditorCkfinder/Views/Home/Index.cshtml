@model CkeditorCkfinder.Controllers.EditorVm
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="~/public/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @using (Html.BeginForm("Add","Home", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
    {
        <div class="row">
            <p class="pull-left">
                <button type="submit" name="action:Add" class="btn no-border">ذخیره </button>
                <button type="submit" name="action:AddAndContinue" class="btn btn-primary no-border">ذخیره و ادامه ویرایش</button>
            </p>
        </div>
        <br />
        <div class="col-lg-12">
            <div class="well-lg">
                <div class="form-horizontal">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Content, new { @class = "wysiwyg", rows = "10" ,cols = "80" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <script src="~/public/jquery/dist/jquery.js"></script>
    <script src="~/public/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/public/ckfinder/ckfinder.js"></script>
    <script src="~/public/ckeditor/ckeditor.js"></script>

    <script src="~/public/scripts/ckEditor.js"></script>
</body>
</html>
